<% signup_url="" %>
<!-- Begin Sign Up Modal -->
<div id="signup_modal" class="modal hide fade noise" tabindex="-1" role="dialog" aria-labelledby="signup_modal_label" aria-hidden="true">
  <div class="modal-header">
    
    <div class="row-fluid">
	<div class="span6">
    <h3 id="signup_modal_label" class="handwriting" >Sign Up</h3></div><div class="span6"><button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button><h3 id="signup_modal_label" class="handwriting" >Sign In</h3></div>
    </div>
  </div>
  <div class="modal-body handwriting">
		<div class="row-fluid">
		<div class="span6">
			<%= simple_form_for(:user, :url => user_registration_path ) do |f| %>
			  <%= f.error_notification %>

			    <%= f.input :uname, :required => false, label: "Username" %>
			    <%= f.input :email, :required => false, :autofocus => true %>
			    <%= f.input :password, :required => false %>
			    <%= f.input :password_confirmation, :required => false, label: "Confirm Password" %>
			    <%= submit_tag "Sign Up", class: "btn btn-success" %>
			<% end %>
		</div>
		<div class="span6">
		<%= simple_form_for(:user, url: user_session_path, class: "form-inline" ) do |f| %>
		    <%= f.input :email, :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean  %>
		    <%= submit_tag "Sign In", class: "btn btn-success" %>
		<% end %>
		</div>
		</div>
  </div>
</div> 
<!-- End Sign Up Modal -->
