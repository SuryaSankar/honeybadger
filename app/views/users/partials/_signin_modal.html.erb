<!-- Begin Sign In Modal -->
<div id="signin_modal" class="modal hide fade noise" tabindex="-1" role="dialog" aria-labelledby="signin_modal_label" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="signin_modal_label" class="handwriting" >Sign In</h3>
  </div>
  <div class="modal-body handwriting">
	<%= bootstrap_flash %> 
		<%= simple_form_for(:user, url: user_session_path, class: "form-inline" ) do |f| %>
		    <%= f.input :email, :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean  %>
		    <%= submit_tag "Sign In", class: "btn btn-success" %>
		<% end %>
  </div>
</div> 
<!-- End Sign In Modal -->
