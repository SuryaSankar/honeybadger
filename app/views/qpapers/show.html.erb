<%- model_class = Qpaper -%>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @qpaper.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:institution) %>:</strong></dt>
  <dd><%= @qpaper.institution %></dd>
  <dt><strong>Course: </strong></dt>
  <dd><%= @qpaper.course.name%></dd>
  <% @qpaper.examquestions.order("qnumber").includes(:question).each do |eq| %>
  <dt><strong><%= eq.qnumber %></strong></dt>
  <dd><%= eq.question.qtext %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              qpapers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_qpaper_path(@qpaper), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              qpaper_path(@qpaper),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
