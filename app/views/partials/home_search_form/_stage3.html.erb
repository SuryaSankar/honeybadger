<div id="search_box_stage3">
	<%= bootstrap_flash %>
	<%= form_tag '/search/get_course', method: :get , class: "form-horizontal" do%>
		<div class="control-group">
			 <label class="control-label" for="program_id">Choose your Course and head to the course page to see the question papers, notes and other stuff :</label>
			 <div class="controls">
				<%= select_tag "id", options_from_collection_for_select(prog_univ_courses, "id" , "full_course_name")%>
			</div>
		</div>
		<div class="form-actions">
		
		<%= submit_tag "Go to course home page", class: "btn btn-danger" %>
		</div>	
	<% end %>
	<button id="search_box_back" class="btn btn-info">Back</button>
</div>
