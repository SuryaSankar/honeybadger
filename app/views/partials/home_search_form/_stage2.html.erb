<div id="search_box_stage2">
	<%= bootstrap_flash %>
	<%= form_tag '/search/find_courses_from_program_and_semester', method: :get , remote: true, class: "form-horizontal" do%>
		<div class="control-group">
			 <label class="control-label" for="program_id">Choose your program :</label>
			 <div class="controls">
				<%= select_tag "program_id", options_from_collection_for_select(programs, "id" , "short_desc")%>
			</div>
		</div>
		<div class="control-group">
			 <label class="control-label" for="semester">Choose the semester :</label>
			 <div class="controls">
				<%= select_tag "semester", options_for_select([ 1,2,3,4,5,6,7,8 ], 1)%>
			</div>
		</div>
		<div class="form-actions">
                
		<%= submit_tag "Next", class: "btn btn-danger" %>
		</div>	
	<% end %>
<button id="search_box_back" class="btn btn-info">Back</button>
</div>
