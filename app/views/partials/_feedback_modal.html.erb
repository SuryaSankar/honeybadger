<div id="feedback_modal" class="modal hide fade noise boardGreenBG" tabindex="-1" role="dialog" aria-labelledby="feedback_modal_label" aria-hidden="true">
  <div class="modal-header">
	<h3 id="feedback_modal_label" class="handwriting" >Submit your feedback<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button></h3>
  </div>
  <div class="modal-body handwriting">
			
			<%= simple_form_for(@feedback, :url => feedbacks_path ) do |f| %>
			  <%= f.error_notification %>
			   
			    <% if user_signed_in? then%>
				<% @feedback.name=current_user.uname %>
				<% @feedback.email=current_user.email %>
				<%= f.hidden_field :name %>
				<%= f.hidden_field :email %>
			    <% else %>
			    <%= f.input :name, :required => false, label: "Your Name:" %>
			    <%= f.input :email, :required => false, :autofocus => true, label: "Your email:" %>
			    <% end %>
			    <%= label_tag :body, "Your Suggestion/Feedback:" %>
			    <%= f.text_area :body,  class: "TextBox150x400"  %>
			    <%= submit_tag "Send", class: "btn btn-success" %>
			<% end %>
   </div>
