<div class="row">	
		<div class="hero-unit noise" id="banner">
			<div class="row">
				<div class="span5">
					<h1>Karpeer<small>  / kəˈrpēr /</small></h1> <h4> <em>Origin:</em> A Tamil verb </h4><h4> <em>Meaning:</em> <strong>An exhortation to learn </strong> </h4>
				</div>
				<div class="span2">
					<ul class="icons-ul">
					<li><i class="icon-check"></i> Question Papers</li>
					<li><i class="icon-check"></i> Cheat Sheets</li>
					<li><i class="icon-check-empty"></i> Solutions</li>
					<li><i class="icon-check-empty"></i> Video lectures</li>
					<li><i class="icon-check-empty"></i> Tutors</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="navbar" id="lowerBar"><div class="navbar-inner"  ></div></div>
</div>

<div class="row" id="launchBox">
	<div class="span8">
		<%= bootstrap_flash %>
		<%= form_tag '/search', method: :get , class: "form-horizontal" do%>
			<%= select_tag "university", options_from_collection_for_select(University.all, "id" , "name")%>
			<%= select_tag "program", options_from_collection_for_select(Program.all, "id" , "short_desc")%>
			<%= select_tag "university_course", options_from_collection_for_select(UniversityCourse.all, "id" , "full_course_name")%>
			<%= submit_tag "Find Question Papers", class: "btn btn-danger" %>	
		<% end %>
	</div>
	<div class="span3 offset1">
		<div class="row topPadding20">
			<%= link_to  user_omniauth_authorize_path(:facebook), class: "btn btn-primary" do %>
				<i class="icon-facebook"></i> Facebook
			<% end %>
			<%= link_to  user_omniauth_authorize_path(:google_oauth2), class: "btn btn-danger" do %>
				<i class="icon-google-plus"></i> Google
			<% end %>
			
		</div>
		<div class="row topPadding20">
		<%= bootstrap_flash %> 
		<%= simple_form_for(:user, url: user_session_path, class: "form-inline" ) do |f| %>
		    <%= f.input :email, :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean  %>
		    <%= f.button :submit, "Sign in" %>
		<% end %>
		</div>
		<div class="row topPadding20">
			<button type="button" class="btn btn-info btn-block" data-toggle="modal" data-target="#signup_modal"> <i class="icon-envelope"></i> Register Now</button>
		</div>
	</div>
</div>

 <!-- End container -->

