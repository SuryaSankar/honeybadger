<!-- Begin Sign Up Modal -->
<div id="signup_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="signup_modal_label" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="signup_modal_label">Sign in if you've already registered</h3>
  </div>
  <div class="modal-body">
		<%= bootstrap_flash %> 
		<%= form_tag "/auth/identity/callback", :html => { :class => 'form-inline' } do %>  
			<%= text_field_tag :auth_key, nil, placeholder: "Email" %>
			<%= password_field_tag :password, nil,placeholder: "Password" %>
			<%= submit_tag "Log In", class: "btn btn-primary"%>
			<%= label_tag :remember_me , nil, class: "checkbox" do %>
			Remember Me 
			<%= check_box_tag :remember_me, 1, params[:remember_me], class: "checkbox" %>
			<% end %>
			
<p><%= link_to "Forgot password?", new_password_reset_path %></p>
		<% end %>
		<h3> Or you can register now</h3>
		<%= simple_form_for User.new, :html => { :class => 'form-horizontal' }, url: users_path do |f| %>
			<%= f.input :name  %>
			<%= f.input :email %>
			<%= f.input :password %>
			<%= f.input :password_confirmation, :label => "Confirm Password" %>
			
				<%= f.submit "Register", class:"btn btn-success"  %>
				<button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
		  	
		<% end %>



  </div>
</div> 
<!-- End Sign Up Modal -->
